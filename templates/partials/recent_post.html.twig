 <div class="new new1">
    
    <div class="post-heading">
    <span>{{ recent.publishedAt | date('d') }} {{ recent.publishedAt | date('F') }}</span>
    <img class="img-responsive" src="{{ asset('images/index/gallery/' ~ recent.image) }}" alt="{{recent.title}}">
    </div>
    <div class="post-body">
       <span> <a href="{{ path('post_like',{'slug':recent.slug}) }}"> <i class="fa fa-heart sr-icons"></i> {{recent.numLikes}}</a>
        <i class="fa fa-comments sr-icons"></i> {{recent.numComments}}
        </span>
        <a href="{{ path('single_post', {'slug':recent.slug}) }}">{{ recent.title }}</a>
        <h5> By <span>{{ recent.user.name }}</span></h5>
       
</div>
</div>
    